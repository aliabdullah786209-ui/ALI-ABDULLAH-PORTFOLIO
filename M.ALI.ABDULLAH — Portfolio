  <!-- Scripts -->
  <script>
    // Typing effect for lead paragraph (simple)
    (function typed(){
      const el = document.getElementById('lead-paragraph');
      const texts = [
        "I build responsive mobile & web apps.",
        "I explore AI/ML models in Python.",
        "I design clean, usable user interfaces."
      ];
      let idx = 0, pos = 0, deleting = false;
      function tick(){
        const txt = texts[idx];
        el.textContent = txt.substring(0, pos);
        if (!deleting && pos < txt.length) { pos++; setTimeout(tick, 36); }
        else if (!deleting && pos === txt.length) { deleting = true; setTimeout(tick, 1000); }
        else if (deleting && pos > 0) { pos--; setTimeout(tick, 28); }
        else { deleting = false; idx = (idx + 1) % texts.length; setTimeout(tick, 200); }
      }
      tick();
    })();

    // Reveal elements on scroll
    function revealOnScroll() {
      const reveals = document.querySelectorAll('.reveal');
      const triggerBottom = window.innerHeight * 0.9;
      reveals.forEach((el) => {
        const rect = el.getBoundingClientRect();
        if (rect.top < triggerBottom) {
          const delay = parseInt(el.getAttribute('data-delay') || 0);
          setTimeout(() => el.classList.add('visible'), delay);
        }
      });
    }
    window.addEventListener('scroll', revealOnScroll);
    window.addEventListener('load', () => {
      // animate skill bars
      document.querySelectorAll('.bar > i').forEach((i) => {
        const w = i.getAttribute('data-width') || '80%';
        setTimeout(() => { i.style.width = w; }, 480);
      });
      revealOnScroll();
    });

    // contact submit (demo only)
    function submitContact(e){
      e.preventDefault();
      const btn = e.target.querySelector('button[type="submit"]');
      btn.disabled = true;
      btn.textContent = 'Sending...';
      setTimeout(()=> {
        btn.disabled = false;
        btn.textContent = 'Send Message';
        alert('Message sent — demo. Configure a backend or email service to receive messages.');
        e.target.reset();
      }, 900);
    }
  </script>

